<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td>
          <%= button_to "Edit", edit_tag_path(tag), class: 'btn btn-secondary' %>

          <%= button_to "Delete", tag, method: :delete, class: 'btn btn-warning' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
