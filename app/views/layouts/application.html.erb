<!DOCTYPE html>
<html>
  <head>
    <title>Dfgrb</title>
    <meta charset="utf-8">
    <meta name="viewport" content="initial-scale=1, width=device-width"/>
    <title>Bootstrap demo</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_pack_tag "application" %>
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <!-- Container wrapper -->
      <div class="container-fluid">
        <!-- Toggle button -->
        <button
          class="navbar-toggler"
          type="button"
          data-mdb-toggle="collapse"
          data-mdb-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <i class="fas fa-bars"></i>
        </button>
        <!-- Collapsible wrapper -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <!-- Navbar brand -->
          <a class="navbar-brand mt-2 mt-lg-0" href="/">
            AutArch
          </a>
          <!-- preprint link -->
          <!-- Left links -->
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to('Grains', grains_path, class: 'nav-link') %>
            </li>
            <li class="nav-item">
              <%= link_to('Uploads', uploads_path, class: 'nav-link') %>
            </li>
            <li class="nav-item">
              <%= link_to('Sites', sites_path, class: 'nav-link') %>
            </li>
            <li class="nav-item">
              <%= link_to('Species', strains_path, class: 'nav-link') %>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/maps">Map</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= new_upload_path %>">Upload Photographs</a>
            </li>
          </ul>
          <!-- Left links -->

          <% if current_user %>
            <ul class="navbar-nav d-flex">
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#"><%= current_user.name %></a>

                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="<%= logout_path %>">Logout</a></li>
                </ul>
              </li>
            </ul>
          <% end %>
        </div>
        <!-- Collapsible wrapper -->
      </div>
      <!-- Container wrapper -->
    </nav>

    <% flash.each do |type, msg| %>
      <div class="alert alert-primary" role="alert">
        <%= msg %>
      </div>
    <% end %>

    <% if @no_box %>
      <%= yield %>
    <% else %>
      <div class='mx-4'>
        <div class="card m-3 shadow-5">
          <div class="card-body">
            <div class="card-text">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </body>
</html>
