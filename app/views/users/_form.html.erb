<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= if f.object.errors[:base].present?
    f.error_notification message: f.object.errors[:base].to_sentence
  end %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :code_hash %>
    <%= f.input :name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
