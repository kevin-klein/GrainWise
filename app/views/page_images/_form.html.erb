<%= form_with(model: page_image) do |form| %>
  <% if page_image.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(page_image.errors.count, "error") %>
        prohibited this page_image from being saved:</h2>

      <ul>
        <% page_image.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :page_id, style: "display: block" %>
    <%= form.text_field :page_id %>
  </div>

  <div>
    <%= form.label :data, style: "display: block" %>
    <%= form.text_field :data %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
