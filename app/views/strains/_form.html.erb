<%= form_with(model: @strain) do |form| %>
  <% if @strain.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@strain.errors.count, "error") %>
        prohibited this species from being saved:</h2>

      <ul>
        <% site.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mtb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
